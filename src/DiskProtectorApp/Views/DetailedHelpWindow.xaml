<controls:MetroWindow x:Class="DiskProtectorApp.Views.DetailedHelpWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      Title="Ayuda Detallada de DiskProtectorApp" 
                      Height="600" Width="800"
                      WindowStartupLocation="CenterOwner"
                      ResizeMode="CanResizeWithGrip"
                      GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                      BorderThickness="1"
                      BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                      Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                      Foreground="{DynamicResource MahApps.Brushes.Text}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Encabezado -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MahApps.Brushes.Accent3}"
                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <StackPanel>
                <TextBlock Text="DiskProtectorApp v2.3.0" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Text}"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Aplicación para protección de discos mediante gestión de permisos NTFS" 
                           FontSize="14"
                           Foreground="{DynamicResource MahApps.Brushes.Text}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Contenido con scroll -->
        <ScrollViewer Grid.Row="1" 
                       VerticalScrollBarVisibility="Auto"
                       Padding="20,15">
            <StackPanel>
                <!-- Sección: Descripción -->
                <TextBlock Text="DESCRIPCIÓN" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="DiskProtectorApp es una aplicación de escritorio para Windows desarrollada en .NET 8 y WPF que permite proteger y desproteger unidades de disco duro contra modificaciones del contenido mediante la gestión avanzada de permisos NTFS." 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>
                
                <TextBlock Text="La aplicación ofrece una interfaz intuitiva para controlar el acceso a discos, permitiendo restringir o conceder permisos de lectura, escritura y ejecución a diferentes grupos de usuarios de Windows." 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <!-- Sección: Características Principales -->
                <TextBlock Text="CARACTERÍSTICAS PRINCIPALES" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <BulletDecorator Margin="0,0,0,5">
                    <BulletDecorator.Bullet>
                        <Ellipse Fill="{DynamicResource MahApps.Brushes.Accent}" Width="6" Height="6" Margin="0,6,8,0"/>
                    </BulletDecorator.Bullet>
                    <TextBlock Text="Protección de Discos: Restringe el acceso de escritura/modificación a discos seleccionados"
                               Style="{StaticResource MahApps.Styles.TextBlock}"
                               TextWrapping="Wrap"/>
                </BulletDecorator>
                
                <BulletDecorator Margin="0,0,0,5">
                    <BulletDecorator.Bullet>
                        <Ellipse Fill="{DynamicResource MahApps.Brushes.Accent}" Width="6" Height="6" Margin="0,6,8,0"/>
                    </BulletDecorator.Bullet>
                    <TextBlock Text="Desprotección de Discos: Restaura el acceso normal de escritura/modificación a discos protegidos"
                               Style="{StaticResource MahApps.Styles.TextBlock}"
                               TextWrapping="Wrap"/>
                </BulletDecorator>
                
                <BulletDecorator Margin="0,0,0,5">
                    <BulletDecorator.Bullet>
                        <Ellipse Fill="{DynamicResource MahApps.Brushes.Accent}" Width="6" Height="6" Margin="0,6,8,0"/>
                    </BulletDecorator.Bullet>
                    <TextBlock Text="Administración de Discos: Concede permisos de administración a discos no administrables"
                               Style="{StaticResource MahApps.Styles.TextBlock}"
                               TextWrapping="Wrap"/>
                </BulletDecorator>
                
                <BulletDecorator Margin="0,0,0,5">
                    <BulletDecorator.Bullet>
                        <Ellipse Fill="{DynamicResource MahApps.Brushes.Accent}" Width="6" Height="6" Margin="0,6,8,0"/>
                    </BulletDecorator.Bullet>
                    <TextBlock Text="Interfaz Moderna: Diseño oscuro con controles personalizados usando MahApps.Metro"
                               Style="{StaticResource MahApps.Styles.TextBlock}"
                               TextWrapping="Wrap"/>
                </BulletDecorator>
                
                <BulletDecorator Margin="0,0,0,5">
                    <BulletDecorator.Bullet>
                        <Ellipse Fill="{DynamicResource MahApps.Brushes.Accent}" Width="6" Height="6" Margin="0,6,8,0"/>
                    </BulletDecorator.Bullet>
                    <TextBlock Text="Procesamiento Paralelo: Procesa múltiples discos simultáneamente para mayor eficiencia"
                               Style="{StaticResource MahApps.Styles.TextBlock}"
                               TextWrapping="Wrap"/>
                </BulletDecorator>
                
                <BulletDecorator Margin="0,0,0,5">
                    <BulletDecorator.Bullet>
                        <Ellipse Fill="{DynamicResource MahApps.Brushes.Accent}" Width="6" Height="6" Margin="0,6,8,0"/>
                    </BulletDecorator.Bullet>
                    <TextBlock Text="Ventanas de Progreso: Muestra el estado detallado de las operaciones en tiempo real"
                               Style="{StaticResource MahApps.Styles.TextBlock}"
                               TextWrapping="Wrap"/>
                </BulletDecorator>
                
                <BulletDecorator Margin="0,0,0,20">
                    <BulletDecorator.Bullet>
                        <Ellipse Fill="{DynamicResource MahApps.Brushes.Accent}" Width="6" Height="6" Margin="0,6,8,0"/>
                    </BulletDecorator.Bullet>
                    <TextBlock Text="Registro Detallado: Mantiene logs completos de todas las operaciones realizadas"
                               Style="{StaticResource MahApps.Styles.TextBlock}"
                               TextWrapping="Wrap"/>
                </BulletDecorator>
                
                <!-- Sección: Requisitos del Sistema -->
                <TextBlock Text="REQUISITOS DEL SISTEMA" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Sistema Operativo:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="- Windows 10/11 x64&#x0a;- Sistema de archivos NTFS"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Runtime Necesario:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Margin="0,0,0,10">
                    <Run Text="- Microsoft .NET 8.0 Desktop Runtime x64&#x0a;- Descargar desde: "/>
                    <Hyperlink Name="DotNetDownloadLink" 
                               NavigateUri="https://dotnet.microsoft.com/download/dotnet/8.0" 
                               RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="{DynamicResource MahApps.Brushes.Accent}">
                        <Run Text="https://dotnet.microsoft.com/download/dotnet/8.0"/>
                    </Hyperlink>
                </TextBlock>
                
                <TextBlock Text="Permisos:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="- La aplicación DEBE ejecutarse con privilegios de administrador"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <!-- Sección: Instalación -->
                <TextBlock Text="INSTALACIÓN" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="1. Descargue el archivo .tar.gz de la última versión desde la sección de Releases&#x0a;2. Extraiga el contenido del archivo en una carpeta de su elección&#x0a;3. Ejecute DiskProtectorApp.exe como administrador"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <!-- Sección: Uso de la Aplicación -->
                <TextBlock Text="USO DE LA APLICACIÓN" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Ejecución:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="1. Haga clic derecho en DiskProtectorApp.exe&#x0a;2. Seleccione &#34;Ejecutar como administrador&#34;"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Interfaz Principal:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="- Barra de herramientas: Contiene botones para actualizar, proteger, desproteger y administrar discos&#x0a;- Lista de discos: Muestra información detallada de cada disco disponible&#x0a;- Barra de estado: Muestra mensajes de operación y progreso"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <!-- Subsección: Funcionalidades -->
                <TextBlock Text="Funcionalidades:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="Proteger Discos:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="10,0,0,5"/>
                
                <TextBlock Text="1. Seleccione uno o más discos marcando las casillas correspondientes&#x0a;2. Haga clic en el botón &#34;Proteger&#34;&#x0a;3. Los discos seleccionados se protegerán y se mostrarán con estado &#34;Protegido&#34; (verde)"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="10,0,0,10"/>
                
                <TextBlock Text="Desproteger Discos:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="10,0,0,5"/>
                
                <TextBlock Text="1. Seleccione uno o más discos protegidos&#x0a;2. Haga clic en el botón &#34;Desproteger&#34;&#x0a;3. Los discos seleccionados se desprotegerán y se mostrarán con estado &#34;Desprotegido&#34; (rojo)"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="10,0,0,10"/>
                
                <TextBlock Text="Administrar Discos:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="10,0,0,5"/>
                
                <TextBlock Text="1. Seleccione uno o más discos no administrables&#x0a;2. Haga clic en el botón &#34;Administrar&#34;&#x0a;3. La aplicación otorgará permisos de Control Total a SYSTEM y Administradores"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="10,0,0,10"/>
                
                <TextBlock Text="Actualizar Lista:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="10,0,0,5"/>
                
                <TextBlock Text="- Haga clic en el botón &#34;Actualizar&#34; para refrescar la lista de discos"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="10,0,0,20"/>
                
                <!-- Sección: Lógica de Protección -->
                <TextBlock Text="LÓGICA DE PROTECCIÓN" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="La aplicación implementa una lógica de protección basada en permisos NTFS:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="DISCO PROTEGIDO:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="- Grupo &#34;Usuarios&#34; NO tiene permisos Allow&#x0a;- Grupo &#34;Usuarios autenticados&#34; tiene SOLO permisos de lectura/ejecución (RX)"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="DISCO DESPROTEGIDO:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="- Grupo &#34;Usuarios&#34; tiene permisos Allow&#x0a;- Grupo &#34;Usuarios autenticados&#34; tiene permisos de modificación/escritura (M, W, F)"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <!-- Sección: Registro de Operaciones -->
                <TextBlock Text="REGISTRO DE OPERACIONES" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Todas las operaciones se registran en:&#x0a;%APPDATA%\DiskProtectorApp\Logs\operation.log&#x0a;Se conservan los últimos registros por 30 días"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <!-- Sección: Logs de Diagnóstico -->
                <TextBlock Text="LOGS DE DIAGNÓSTICO" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Los logs detallados se almacenan en:&#x0a;%APPDATA%\DiskProtectorApp\Logs\&#x0a;Categorías: UI, ViewModel, Service, Operation, Permission&#x0a;Niveles: DEBUG, INFO, WARN, ERROR, FATAL"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>
                
                <!-- Sección: Desarrollo -->
                <TextBlock Text="DESARROLLO" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Tecnologías Utilizadas:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Text="- .NET 8&#x0a;- WPF (Windows Presentation Foundation)&#x0a;- MahApps.Metro para la interfaz moderna&#x0a;- Patrón MVVM (Model-View-ViewModel)"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Autor:"
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <TextBlock Margin="0,0,0,20">
                    <Run Text="- Nombre: Emigdio Alexey Jimenez Acosta&#x0a;- "/>
                    <Run Text="Email: "/>
                    <Hyperlink Name="EmailLink" 
                               NavigateUri="mailto:ealexeyja@gmail.com" 
                               RequestNavigate="Hyperlink_RequestNavigate"
                               Foreground="{DynamicResource MahApps.Brushes.Accent}">
                        <Run Text="ealexeyja@gmail.com"/>
                    </Hyperlink>
                    <Run Text="&#x0a;- Teléfono: +53 5586 0259"/>
                </TextBlock>
                
                <!-- Sección: Licencia -->
                <TextBlock Text="LICENCIA" 
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MahApps.Brushes.Accent}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Este proyecto está licenciado bajo la Licencia MIT."
                           Style="{StaticResource MahApps.Styles.TextBlock}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Botón de cerrar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource MahApps.Brushes.Gray10}"
                BorderBrush="{DynamicResource MahApps.Brushes.Gray8}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cerrar" 
                        Width="80"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</controls:MetroWindow>
