<controls:MetroWindow x:Class="DiskProtectorApp.Views.HelpWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      Title="Ayuda de DiskProtectorApp" 
                      Height="500" Width="600"
                      WindowStartupLocation="CenterOwner"
                      ResizeMode="NoResize"
                      GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                      BorderThickness="1"
                      BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                      Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                      Foreground="{DynamicResource MahApps.Brushes.Text}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="INFORMACIÓN DEL DESARROLLADOR" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
        
        <!-- Contenido principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Información del desarrollador -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="• Nombre: Emigdio Alexey Jimenez Acosta" Margin="0,0,0,5"/>
                    <TextBlock Margin="0,0,0,5">
                        <Run Text="• Email: "/>
                        <Hyperlink Name="EmailLink" Click="EmailLink_Click">
                            <Run Text="ealexeyja@gmail.com"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Text="• Teléfono: +53 5586 0259" Margin="0,0,0,5"/>
                </StackPanel>
                
                <!-- Descripción -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="DESCRIPCIÓN:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Aplicación para protección de discos mediante gestión de permisos NTFS." TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Requisitos técnicos -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="⚠️ REQUISITOS TÉCNICOS:" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="🔷 EJECUCIÓN COMO ADMINISTRADOR:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="• La aplicación DEBE ejecutarse con privilegios de administrador" Margin="10,0,0,2"/>
                    <TextBlock Text="• Click derecho → &#34;Ejecutar como administrador&#34;" Margin="10,0,0,10"/>
                    
                    <TextBlock Text="🔷 RUNTIME NECESARIO:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="• Microsoft .NET 8.0 Desktop Runtime x64" Margin="10,0,0,2"/>
                    <TextBlock Margin="10,0,0,10">
                        <Run Text="• Descargar desde: "/>
                        <Hyperlink Name="DotNetLink" Click="DotNetLink_Click">
                            <Run Text="https://dotnet.microsoft.com/download/dotnet/8.0"/>
                        </Hyperlink>
                    </TextBlock>
                    
                    <TextBlock Text="🔷 SISTEMA OPERATIVO:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="• Windows 10/11 x64" Margin="10,0,0,2"/>
                    <TextBlock Text="• Sistema de archivos NTFS" Margin="10,0,0,2"/>
                </StackPanel>
                
                <!-- Instrucciones de uso -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="INSTRUCCIONES DE USO:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="1. Ejecutar la aplicación como Administrador" Margin="0,0,0,5"/>
                    <TextBlock Text="2. Seleccionar los discos a proteger/desproteger" Margin="0,0,0,5"/>
                    <TextBlock Text="3. Click en el botón correspondiente" Margin="0,0,0,5"/>
                    <TextBlock Text="4. Esperar confirmación de la operación" Margin="0,0,0,5"/>
                </StackPanel>
                
                <!-- Registro de operaciones -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="📝 REGISTRO DE OPERACIONES:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="• Todas las operaciones se registran en:" Margin="0,0,0,2"/>
                    <TextBlock Text="• %APPDATA%\DiskProtectorApp\Logs\operation.log" Margin="10,0,0,2"/>
                    <TextBlock Text="• Se conservan los últimos registros" Margin="10,0,0,2"/>
                </StackPanel>
                
                <!-- Logs de diagnóstico -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="LOGS DE DIAGNÓSTICO:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="• Logs detallados en:" Margin="0,0,0,2"/>
                    <TextBlock Text="• %APPDATA%\DiskProtectorApp\Logs\" Margin="10,0,0,2"/>
                    <TextBlock Text="• Categorías: UI, ViewModel, Service, Operation, Permission" Margin="10,0,0,2"/>
                    <TextBlock Text="• Niveles: DEBUG, INFO, WARN, ERROR, FATAL" Margin="10,0,0,2"/>
                </StackPanel>
                
                <!-- Versión -->
                <StackPanel>
                    <TextBlock Name="VersionText" Text="Versión actual: v1.2.6" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Botón de cerrar -->
        <Button Grid.Row="2" 
                Content="Cerrar" 
                HorizontalAlignment="Right" 
                Width="80" 
                Margin="0,15,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</controls:MetroWindow>
