<Window x:Class="DiskProtectorApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskProtectorApp.Views"
        xmlns:converters="clr-namespace:DiskProtectorApp.Converters"
        xmlns:controls="clr-namespace:DiskProtectorApp.Controls"
        mc:Ignorable="d"
        Title="DiskProtectorApp v1.2.7" 
        Height="600" Width="900" MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <converters:DiskStatusToBrushConverter x:Key="DiskStatusToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra de menú -->
        <Menu Grid.Row="0">
            <MenuItem Header="Archivo">
                <MenuItem Header="Refrescar" Command="{Binding RefreshCommand}"/>
                <Separator/>
                <MenuItem Header="Salir" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Ayuda">
                <MenuItem Header="Acerca de..." Command="{Binding ShowInfoCommand}"/>
            </MenuItem>
        </Menu>

        <!-- DataGrid de discos -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Disks}" 
                  SelectedItem="{Binding SelectedDisk}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Letra" Binding="{Binding DriveLetter}" Width="80"/>
                <DataGridTextColumn Header="Nombre del volumen" Binding="{Binding VolumeName}" Width="150"/>
                <DataGridTextColumn Header="Tamaño total" Binding="{Binding TotalSize}" Width="100"/>
                <DataGridTextColumn Header="Espacio libre" Binding="{Binding FreeSpace}" Width="100"/>
                <DataGridTemplateColumn Header="Estado" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <controls:DiskStatusIndicator DiskInfo="{Binding}" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ProtectionStatus}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Administrable" Binding="{Binding IsManageable}" Width="100"/>
                <DataGridTextColumn Header="Protegido" Binding="{Binding IsProtected}" Width="80"/>
                <DataGridTextColumn Header="Seleccionable" Binding="{Binding IsSelectable}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Información de discos seleccionados -->
        <TextBlock Grid.Row="2" 
                   Text="{Binding SelectedDisksInfo}" 
                   Margin="10,5"
                   FontWeight="Bold"/>

        <!-- Barra de estado -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
