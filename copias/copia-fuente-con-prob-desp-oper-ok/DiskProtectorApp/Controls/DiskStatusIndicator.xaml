<UserControl x:Class="DiskProtectorApp.Controls.DiskStatusIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiskProtectorApp.Controls"
             xmlns:converters="clr-namespace:DiskProtectorApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    
    <UserControl.Resources>
        <converters:DiskStatusToBrushConverter x:Key="DiskStatusToBrushConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Ellipse x:Name="StatusEllipse" 
                 Fill="{Binding DiskInfo, Converter={StaticResource DiskStatusToBrushConverter}}"
                 Stroke="Black" 
                 StrokeThickness="1"/>
    </Grid>
</UserControl>
